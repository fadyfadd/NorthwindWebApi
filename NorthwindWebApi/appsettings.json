{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AppConfiguration": {
    "CorsConfiguration": {
      "WithOrigins": [
        "http://localhost:3000"
      ],
      "WithHeaders": [
        "Authorization",
        "origin",
        "accept",
        "content-type"
      ],
      "WithMethods": [
        "GET",
        "POST",
        "PUT",
        "DELETE"
      ]
    },
    "JwtConfiguration": {
      "Issuer": "http://localhost:5251",
      "Audience": "http://localhost:3000",
      "ExpirationInMinutes": 10,
      "RefreshTokenExpirationInMinutes" : 60,
      "Key": "your-very-long-secret-key-of-32+chars"
    },
    "SwaggerConfiguration": {
      "Version": "v1",
      "Title": "Northwind API",
      "Description" : "An ASP.NET Core Web API for managing Northwind Database"
    } , 
    "DatabaseConfiguration" : {
      "ConnectionString": "Host=localhost;Port=5432;Database=northwind;Username=postgres;Password=postgres"
    }
  }
}

